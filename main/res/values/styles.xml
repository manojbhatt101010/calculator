<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:background">#dddddd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="equalStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:background">#dddddd</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#005500</item>
    </style>

    <style name="expression">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:paddingRight">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">end</item>
    </style>

</resources>
